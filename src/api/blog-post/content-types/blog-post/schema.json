{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Posts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "mainImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "youtubeUrl": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::blog-category.blog-category"
    },
    "seoBlock": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo-block",
      "required": true
    },
    "amountViews": {
      "type": "integer",
      "required": true
    },
    "contentBlocks": {
      "type": "component",
      "repeatable": true,
      "component": "blog.tutorial-content-blocks",
      "required": true
    }
  }
}
